<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="206dp"
            android:layout_height="wrap_content"
            android:text="Type your user name here"
            android:id="@+id/textView"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" android:visibility="visible"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="116dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
            android:id="@+id/username"
            android:layout_width="205dp"
            android:layout_height="64dp"
            android:inputType="textPersonName"
            android:text=""
            android:ems="10"
            android:layout_marginTop="52dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="116dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Button

            android:text="next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button"
            android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/username" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="160dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>


